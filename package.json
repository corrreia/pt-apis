{
  "name": "pt-apis",
  "type": "module",
  "packageManager": "bun@1.3.8",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:migrate:dev": "wrangler d1 migrations apply pt-apis-d1",
    "db:migrate:prod": "wrangler d1 migrations apply pt-apis-d1 --remote",
    "db:reset": "wrangler d1 databases delete pt-apis-d1 && wrangler d1 create pt-apis-d1 && wrangler d1 migrations apply pt-apis-d1"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.2.1",
    "@scalar/hono-api-reference": "^0.9.40",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "better-sqlite3": "^12.6.2",
    "wrangler": "^4.63.0"
  }
}
